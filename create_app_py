import tkinter as tk
import getpass
from datetime import date

# Executive code
username = getpass.getuser()
show = "Hello", username, "!!!"
today_date = date.today()
show2 = "Today is", today_date

window = tk.Tk()
window.geometry("800x600")

tk.Label(window, text=("Hello " + username + "\n Today is " + str(today_date)), font="Source_Sans_Pro 18 bold").pack()

window.mainloop()
